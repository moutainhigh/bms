<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model>
    <DataType name="dtQueryCondition">
      <PropertyDef name="deptName">
        <Property name="label">责任部门</Property>
      </PropertyDef>
      <PropertyDef name="startDate">
        <Property name="label">预计回款日期</Property>
        <Property name="dataType">Date</Property>
      </PropertyDef>
      <PropertyDef name="endDate">
        <Property name="label">-</Property>
        <Property name="dataType">Date</Property>
      </PropertyDef>
    </DataType>
    <DataType name="dtCheckReceiptEntity">
      <Property name="creationType">com.jiuyescm.bms.report.bill.CheckReceiptEntity</Property>
      <PropertyDef name="expectDate">
        <Property name="dataType">Date</Property>
        <Property name="label">预计回款日期</Property>
      </PropertyDef>
      <PropertyDef name="area">
        <Property></Property>
        <Property name="label">区域</Property>
      </PropertyDef>
      <PropertyDef name="expectAmount">
        <Property name="dataType">BigDecimal</Property>
        <Property name="label">预计目标</Property>
      </PropertyDef>
      <PropertyDef name="finishAmount">
        <Property name="dataType">BigDecimal</Property>
        <Property name="label">实际完成</Property>
      </PropertyDef>
      <PropertyDef name="finishRate">
        <Property></Property>
        <Property name="label">完成率</Property>
      </PropertyDef>
      <PropertyDef name="detail">
        <Property></Property>
        <Property name="label"> </Property>
      </PropertyDef>
    </DataType>
  </Model>
  <View>
    <DataSet id="dsQuery">
      <ClientEvent name="onCreate">view.get(&quot;#dsQuery&quot;).insert();</ClientEvent>
      <Property name="dataType">[dtQueryCondition]</Property>
    </DataSet>
    <DataSet id="dsCheckReceiptEntity">
      <Property name="dataType">[dtCheckReceiptEntity]</Property>
      <Property name="loadMode">manual</Property>
      <Property name="pageSize">20</Property>
      <Property name="dataProvider">checkReceiptReportController#query</Property>
    </DataSet>
    <ToolBar>
      <DataPilot>
        <Property name="dataSet">dsCheckReceiptEntity</Property>
        <Property name="itemCodes">pages,pageSize</Property>
      </DataPilot>
      <Separator/>
      <ToolBarButton id="btnSearch">
        <ClientEvent name="onClick">var parameter=view.get(&quot;#dsQuery.data&quot;).current;&#xD;
if(isNullOrEmpty(parameter.get(&quot;deptName&quot;))){&#xD;
	dorado.MessageBox.alert(&quot;部门名称不能为空！&quot;);&#xD;
	return;&#xD;
}&#xD;
if(isNullOrEmpty(parameter.get(&quot;startDate&quot;))){&#xD;
	dorado.MessageBox.alert(&quot;开始日期不能为空！&quot;);&#xD;
	return;&#xD;
}&#xD;
if(isNullOrEmpty(parameter.get(&quot;endDate&quot;))){&#xD;
	dorado.MessageBox.alert(&quot;结束日期不能为空！&quot;);&#xD;
	return;&#xD;
}&#xD;
var m=getDays(parameter.get(&quot;startDate&quot;),parameter.get(&quot;endDate&quot;));&#xD;
if(m>60){&#xD;
	dorado.MessageBox.alert(&quot;不能查询时间间隔大于60天的数据!&quot;);&#xD;
	return;&#xD;
}&#xD;
if(parameter.get(&quot;startDate&quot;) > parameter.get(&quot;endDate&quot;)){&#xD;
	dorado.MessageBox.alert(&quot;结束时间必须大于开始时间&quot;);&#xD;
	return;&#xD;
}&#xD;
&#xD;
var now = new Date();&#xD;
var nowTime = now.getTime() ;&#xD;
var day = now.getDay();&#xD;
var oneDayTime = 24*60*60*1000 ;&#xD;
var SundayTime =  nowTime + (7-day)*oneDayTime ;//周日&#xD;
&#xD;
if(parameter.get(&quot;endDate&quot;) >new Date(SundayTime)){&#xD;
	dorado.MessageBox.alert(&quot;结束时间必须小于本周天&quot;);&#xD;
	return;&#xD;
}&#xD;
&#xD;
with(view.get(&quot;#dsCheckReceiptEntity&quot;)){&#xD;
	set(&quot;parameter&quot;,parameter);&#xD;
	flushAsync();&#xD;
}&#xD;
function getDays(strDateStart,strDateEnd){&#xD;
   var iDays = parseInt(Math.abs(strDateEnd - strDateStart ) / 1000 / 60 / 60 /24)//把相差的毫秒数转换为天数&#xD;
   return iDays ;&#xD;
}</ClientEvent>
        <Property name="caption">查询</Property>
      </ToolBarButton>
      <ToolBarButton id="btnExport">
        <ClientEvent name="onClick">var condition = view.get(&quot;#dsQuery.data&quot;).current;&#xD;
&#xD;
view.get(&quot;#downloadAction&quot;).set(&quot;parameter&quot;,condition).execute();</ClientEvent>
        <Property name="caption">导出</Property>
        <Property name="icon">url(>skin>common/icons.gif) -180px -120px</Property>
        <Property name="visible">true</Property>
      </ToolBarButton>
    </ToolBar>
    <AutoForm>
      <Property name="dataSet">dsQuery</Property>
      <Property name="cols">*,*,*,*</Property>
      <Property name="labelWidth">120</Property>
      <AutoFormElement>
        <Property name="name">deptName</Property>
        <Property name="property">deptName</Property>
        <Editor/>
      </AutoFormElement>
      <AutoFormElement>
        <Property name="name">startDate</Property>
        <Property name="property">startDate</Property>
        <Editor/>
      </AutoFormElement>
      <AutoFormElement>
        <Property name="name">endDate</Property>
        <Property name="property">endDate</Property>
        <Editor/>
      </AutoFormElement>
    </AutoForm>
    <Container>
      <DataGrid>
        <Property name="dataSet">dsCheckReceiptEntity</Property>
        <Property name="readOnly">true</Property>
        <DataColumn name="expectDate">
          <Property name="property">expectDate</Property>
        </DataColumn>
        <DataColumn name="area">
          <Property name="property">area</Property>
        </DataColumn>
        <DataColumn name="expectAmount">
          <Property name="property">expectAmount</Property>
        </DataColumn>
        <DataColumn name="finishAmount">
          <Property name="property">finishAmount</Property>
        </DataColumn>
        <DataColumn name="finishRate">
          <Property name="property">finishRate</Property>
        </DataColumn>
        <DataColumn name="detail">
          <Property name="property">detail</Property>
        </DataColumn>
      </DataGrid>
    </Container>
  </View>
</ViewConfig>
