<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model>
    <DataType name="dtBillAccountInfo">
      <Property name="creationType">com.jiuyescm.bms.billcheck.BillAccountInfoEntity</Property>
      <PropertyDef name="id">
        <Property name="dataType">long</Property>
      </PropertyDef>
      <PropertyDef name="customerId">
        <Property name="label">商家编号</Property>
      </PropertyDef>
      <PropertyDef name="customerName">
        <Property name="label">商家名称</Property>
      </PropertyDef>
      <PropertyDef name="accountNo">
        <Property name="label">账号</Property>
      </PropertyDef>
      <PropertyDef name="amount">
        <Property name="label">账户余额</Property>
      </PropertyDef>
      <PropertyDef name="creator">
        <Property name="label">创建人</Property>
      </PropertyDef>
      <PropertyDef name="createTime">
        <Property name="label">创建时间</Property>
      </PropertyDef>
      <PropertyDef name="operat">
        <Property name="label">操作</Property>
      </PropertyDef>
    </DataType>
    <DataType name="dtCondition">
      <PropertyDef name="customerName">
        <Property name="label">商家名称</Property>
      </PropertyDef>
      <PropertyDef name="startTime">
        <Property name="dataType">DateTime</Property>
        <Property name="label">创建日期：</Property>
      </PropertyDef>
      <PropertyDef name="endTime">
        <Property name="dataType">DateTime</Property>
