        <DataColumn>
          <Property name="name">customerId</Property>
          <Property name="property">customerId</Property>
          <Property name="visible">true</Property>
          <Editor/>
        </DataColumn>
        <DataColumn>
          <Property name="name">customerName</Property>
          <Property name="property">customerName</Property>
