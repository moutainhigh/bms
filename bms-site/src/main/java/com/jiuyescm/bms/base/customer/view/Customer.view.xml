<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model>
    <DataType name="dtCondition">
      <PropertyDef name="customerid">
        <Property></Property>
        <Property name="label">商家ID</Property>
      </PropertyDef>
      <PropertyDef name="shortname">
        <Property></Property>
        <Property name="label">商家简称</Property>
      </PropertyDef>
      <PropertyDef name="customername">
        <Property></Property>
        <Property name="label">商家全称</Property>
      </PropertyDef>
      <PropertyDef name="delflag">
        <Property name="label">作废标记</Property>
        <Property name="mapping">
          <Property name="mapValues">${dorado.getDataProvider(&quot;omsEnumPR#getInvalidflag&quot;).getResult(&quot;ALL&quot;)}</Property>
        </Property>
      </PropertyDef>
      <PropertyDef name="mkInvoiceName">
        <Property name="label">商家合同名称</Property>
      </PropertyDef>
    </DataType>
  </Model>
  <View>
    <DataSet id="dsCondition">
      <ClientEvent name="onCreate">view.get(&quot;#dsCondition&quot;).getData().insert();</ClientEvent>
      <Property name="dataType">[dtCondition]</Property>
    </DataSet>
    <DataSet id="dsCustomerEntity">
      <Property name="dataType">[dtCustomerEntity]</Property>
      <Property name="pageSize">20</Property>
      <Property name="loadMode">manual</Property>
      <Property name="dataProvider">customerController#query</Property>
    </DataSet>
    <Container id="Container_Main">
      <ToolBar>
        <DataPilot>
          <Property name="dataSet">dsCustomerEntity</Property>
          <Property name="itemCodes">pages,pageSize</Property>
        </DataPilot>
        <Separator/>
        <ToolBarButton id="btnQuery">
          <ClientEvent name="onClick">var data = view.get(&quot;#dsCondition.data&quot;).current;&#xD;
with (view.get(&quot;#dsCustomerEntity&quot;)){&#xD;
					set(&quot;parameter&quot;, data);&#xD;
					flushAsync();&#xD;
				}		&#xD;
</ClientEvent>
          <Property name="caption">查询</Property>
          <Property name="icon">url(>skin>common/icons.gif) -20px -40px</Property>
        </ToolBarButton>
      </ToolBar>
      <AutoForm id="queryConditionFrm">
        <Property name="cols">*,*,*,*,*</Property>
        <Property name="showHint">false</Property>
        <Property name="createPrivateDataSet">true</Property>
        <Property name="readOnly">false</Property>
        <Property name="dataType">dtCondition</Property>
        <Property name="dataSet">dsCondition</Property>
        <Property name="labelWidth">60</Property>
        <Property name="editorWidth">120</Property>
        <AutoFormElement>
          <Property name="name">customerid</Property>
          <Property name="property">customerid</Property>
          <Editor/>
        </AutoFormElement>
        <AutoFormElement>
          <Property name="name">shortname</Property>
          <Property name="property">shortname</Property>
          <Editor/>
        </AutoFormElement>
        <AutoFormElement>
          <Property name="name">customername</Property>
          <Property name="property">customername</Property>
          <Editor/>
        </AutoFormElement>
        <AutoFormElement>
          <Property name="name">delflag</Property>
          <Property name="property">delflag</Property>
          <Editor/>
        </AutoFormElement>
        <AutoFormElement>
          <Property name="name">mkInvoiceName</Property>
          <Property name="property">mkInvoiceName</Property>
          <Property name="labelWidth">100</Property>
          <Editor/>
        </AutoFormElement>
      </AutoForm>
      <DataGrid id="dg_CustomerList">
        <Property name="dataSet">dsCustomerEntity</Property>
        <Property name="stretchColumnsMode">off</Property>
        <Property name="readOnly">true</Property>
        <DataColumn name="customerid">
          <Property name="property">customerid</Property>
        </DataColumn>
        <DataColumn name="customercode">
          <Property name="property">customercode</Property>
        </DataColumn>
        <DataColumn name="shortname">
          <Property name="property">shortname</Property>
        </DataColumn>
        <DataColumn name="customername">
          <Property name="property">customername</Property>
        </DataColumn>
        <DataColumn name="mkInvoiceName">
          <Property name="property">mkInvoiceName</Property>
        </DataColumn>
        <DataColumn name="linkman">
          <Property name="property">linkman</Property>
        </DataColumn>
        <DataColumn name="address">
          <Property name="property">address</Property>
        </DataColumn>
        <DataColumn name="tel">
          <Property name="property">tel</Property>
        </DataColumn>
        <DataColumn name="mobile">
          <Property name="property">mobile</Property>
        </DataColumn>
        <DataColumn name="remark">
          <Property name="property">remark</Property>
        </DataColumn>
        <DataColumn name="delflag">
          <Property name="property">delflag</Property>
        </DataColumn>
        <DataColumn name="creperson">
          <Property name="property">creperson</Property>
        </DataColumn>
        <DataColumn name="cretime">
          <Property name="property">cretime</Property>
        </DataColumn>
        <DataColumn name="modperson">
          <Property name="property">modperson</Property>
        </DataColumn>
        <DataColumn name="modtime">
          <Property name="property">modtime</Property>
        </DataColumn>
        <DataColumn name="province">
          <Property name="property">province</Property>
        </DataColumn>
        <DataColumn name="city">
          <Property name="property">city</Property>
        </DataColumn>
        <DataColumn name="district">
          <Property name="property">district</Property>
        </DataColumn>
      </DataGrid>
    </Container>
  </View>
</ViewConfig>
